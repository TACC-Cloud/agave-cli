#!/usr/bin/env python
"""
    tenants-list [OPTION]... [TENANT_CODE]

Retrieves the list of available tenants from the Agave central database.

Options:
    -H, --hosturl        URL of the service
    -h, --help           Display this help and exit
"""
import argparse
from agavepy.agave import Agave

parser = argparse.ArgumentParser(description="List all Agave tenants")

parser.add_argument(
    "-H",
    "--hosturl",
    default="https://api.tacc.utexas.edu/tenants",
    help="URL of Agave central service.")

if __name__ == "__main__":
    args = parser.parse_args()

    agave = Agave(tenant_id="tacc.prod")
    agave.list_tenants(tenantsurl=args.hosturl)
